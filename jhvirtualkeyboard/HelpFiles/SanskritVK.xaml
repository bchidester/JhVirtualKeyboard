<UserControl x:Class="JhVirtualKeyboard.HelpFiles.SanskritVKHelp"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:xcpt="http://schemas.xceed.com/wpf/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"  
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
              
             d:DesignHeight="400" d:DesignWidth="250">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="myHeaderBrush" StartPoint="0,0" EndPoint="0.5,0.9" SpreadMethod="Reflect">
            <GradientStop Color="#F0E0EAE0" Offset="0.1"/>
            <GradientStop Color="#FFEFFAFF" Offset="0.5"/>
            <GradientStop Color="#F0E0EAE0" Offset="0.9"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="myParagraphBrush" StartPoint="0,0" EndPoint="0.5,0.9" SpreadMethod="Reflect" >
            <GradientStop Color="#EEE0EAE0" Offset="0.1"/>
            <GradientStop Color="#FFDAE5DA" Offset="0.25"/>
            <GradientStop Color="#FFEFFAFF" Offset="0.5"/>
            <GradientStop Color="#EEDAE5DA" Offset="0.75"/>
            <GradientStop Color="#EEE0EAE0" Offset="0.9"/>
        </LinearGradientBrush>
        <Style TargetType="Paragraph">
            <Setter Property="Background" Value="{StaticResource myParagraphBrush}"/>
            <Setter Property="TextBlock.FontFamily" Value="Calibri"/>
            <Setter Property="TextAlignment" Value="Justify"/>
        </Style>
    </UserControl.Resources>
    <Border BorderThickness="1" Margin="0"  Background="{StaticResource myParagraphBrush}">

        <FlowDocumentPageViewer Name="FlowDocumentPageViewer1">
            <FlowDocument>
                <Table Margin="0" >
                    <Table.Resources>
                        <Style x:Key="TransText" TargetType="TableCell">
                            <Setter Property="TextElement.FontSize" Value="18" />
                            <Setter Property="TextElement.FontFamily" Value="Arial Unicode MS" />
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="2,2"/>
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="BorderThickness" Value="2,2"/>
                            <Setter Property="FontWeight" Value="DemiBold"/>
                        </Style>

                        <Style x:Key="WideText" TargetType="TableCell">
                            <Setter Property="TextElement.FontSize" Value="18" />
                            <Setter Property="TextElement.FontFamily" Value="Arial Unicode MS" />
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="2,2"/>
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="BorderThickness" Value="2,2"/>
                            <Setter Property="FontWeight" Value="DemiBold"/>
                        </Style>
                    </Table.Resources>
                    <Table.Columns>
                        <TableColumn Width="60"/>
                        <TableColumn Width="60"/>
                        <TableColumn  Width="60"/>
                    </Table.Columns>
                    <TableRowGroup>
                        <TableRow>

                            <TableCell Style="{StaticResource TransText}">
                                <Paragraph>To Get</Paragraph>
                            </TableCell>
                            <TableCell  Style="{StaticResource TransText}">
